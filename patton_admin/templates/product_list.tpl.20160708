    <script type="text/javascript">
    function deleteDetail(id){
    	
		var confirm = new LightFace({
			width: 250,
			title: '确认信息',
		keys: {
			esc: function() { this.close(); box.unfade(); }
		},
			content: '是否确定删除此商品?',
		buttons: [
			{ title: '是', event: function() { window.location="?cmd=delete&id="+id; }, color: 'green' },
			{ title: '否', event: function() { this.close(); box.unfade(); } }
		]
		});
		confirm.open();
	}
	function setType(type,id,checked){
		var page = '{$page}';
		window.location="?cmd=type&type="+type+"&id="+id+"&check="+checked+"&page="+page;
	}
	function setOnline(id,checked){
		var page = '{$page}';
		window.location="?cmd=online&id="+id+"&check="+checked+"&page="+page;
	}

	
    </script>
